    <script>
        function toggleSection(sectionId) {
            const sections = ['home', 'categories', 'signup'];
            sections.forEach(section => {
                const sectionElement = document.getElementById(section);
                sectionElement.style.display = section === sectionId ? (sectionElement.style.display === 'none' ? 'block' : 'none') : 'none';
            });
        }

        function toggleSubcategory(category) {
            const subcategories = document.querySelectorAll('.subcategory-box');
            subcategories.forEach(subcategory => {
                subcategory.style.display = 'none';
            });
            const selectedSubcategory = document.getElementById(category);
            if (selectedSubcategory) {
                selectedSubcategory.style.display = selectedSubcategory.style.display === 'none' ? 'block' : 'none';
            }
        }

        function submitSignup() {
            alert("Sign Up Successful!");
            toggleSection('home');
        }
    </script>
